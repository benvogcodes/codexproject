<h1><%= @plan.name %></h1>

<div class = "edit-plan-details">
  <h3>Edit plan details</h3>
  <%= form_for(@plan) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :frequency %><br>
    <%= f.text_field :frequency %>
  </p>

  <p>
    <%= f.label :notification %><br>
    <%= f.text_field :language %>
  </p>

  <p>
    <%= f.submit "Save Changes"%>
  </p>
<% end %>
<br>
<%= button_to "Delete This Plan", plan_path(@plan), method: :delete %>
</div>
