<h1><%= @plan.name %></h1>

<div class = "edit-plan-details">
  <h3>Edit plan details</h3>
  <%= form_for(@plan) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :frequency %><br>
    <%= f.text_field :frequency %>
  </p>

  <p>
    <%= f.label "Notify me by:" %><br>
    <%= f.check_box :twilio, {}, true, false %><%= f.label :twilio, "SMS Message" %><br>
    <%= f.check_box :sendgrid, {}, true, false %><%= f.label :sendgrid, "E-mail" %><br>
  </p>

  <p>
    <%= f.submit "Save Changes"%>
  </p>
<% end %>
<br>
<%= button_to "Delete This Plan", plan_path(@plan), method: :delete %>
</div>
