<h1>Create a New Study Plan</h1>
<%= form_for :plan, url: plans_path do |f| %>
  <p>
    <%= f.label :topic %><br>
    <%= f.text_field :topic %>
  </p>

  <p>
    <%= f.label :language %><br>
    <%= f.text_field :language %>
  </p>

  <p>
    <%= f.label "Notify me by:" %><br>
    <%= f.check_box :twilio, {}, "t", "f" %><%= f.label :twilio, "SMS Message" %><br>
    <%= f.check_box :sendgrid, {}, "t", "f" %><%= f.label :sendgrid, "E-mail" %><br>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
