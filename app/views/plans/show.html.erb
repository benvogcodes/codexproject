<h1><%= @plan.name %></h1>

<%= form_tag(edit_plan_path(@plan), :method => :get) do %>
  <%= button_tag( :class => "btn waves-effect waves-light") do %>
    Edit Plan <i class="material-icons right"></i>
  <% end %>
<% end %><br>

<% i = 0 %>

<% while i < @plan.repos.length %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Card Title</span>
          <ul>
            <li><b>name: </b><%= @plan.repos[i]['name'] %></li>
            <li><b>user: </b><%= @plan.repos[i]['user'] %> <i class="fa fa-github"></i></li>
            <li><b>created: </b><%= @plan.repos[i]['created'] %></li>
            <li><b>updated: </b><%= @plan.repos[i]['updated'] %></li>
            <li><b>pushed: </b><%= @plan.repos[i]['pushed'] %></li>
            <li><b>watchers: </b><%= @plan.repos[i]['watchers'] %></li>
            <li><b>url: </b><%= @plan.repos[i]['url'] %></li>
            <li><b>stars: </b><%= @plan.repos[i]['stars'] %> <i class="fa fa-star"></i></li>
            <li><b>forks: </b><%= @plan.repos[i]['forks'] %> <i class="fa fa-code-fork"></i></li>
            <li><b>size: </b><%= @plan.repos[i]['size'] %></li>
            <li><b>desc: </b><%= @plan.repos[i]['desc'] %></li>
          </ul>
        </div>
        <div class="card-action">
          <a href="#">This is a link</a>
          <a href="#">This is a link</a>
        </div>
      </div>
    </div>
  </div>
  <% i += 1 %>
<% end %>
