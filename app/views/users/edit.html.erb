<div class = "edit-account-details">

  <h2 class="paytone-one">Account Settings</h2>

  <br>

  <% if flash[:error] %>
    <% flash[:error].each do |error| %>
      <p class='error'><%= error %></p>
      <%= error="" %>
    <% end %>
  <% end %>

  <%= form_for(@user) do |f| %>

    <p>
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </p>

    <br>

    <p>
      <%= button_tag( :class => "btn waves-effect waves-light") do %>
        Save Changes<i class="material-icons right"></i>
      <% end %>
    </p>

  <% end %>

  <br>

  <%= form_tag(user_path(@user), :method => :delete) do %>
    <%= button_tag( :class => "btn waves-effect waves-light") do %>
      Delete Account<i class="material-icons right"></i>
    <% end %>
  <% end %>

</div>
